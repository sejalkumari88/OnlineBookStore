@model OnlineBookStore.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
                <h2 class="text-danger mb-3">⚠ Delete Book</h2>
                <p class="text-muted mb-4">Are you sure you want to delete this book? This action cannot be undone.</p>

                <!-- Book Details -->
                <div class="d-flex align-items-center justify-content-center mb-4">
                    <img src="@(string.IsNullOrEmpty(Model.CoverImage)
                                                         ? Url.Content("~/images/no-image.png")
                                                         : (Model.CoverImage.StartsWith("/images/")
                                                             ? Model.CoverImage
                                                             : Url.Content("~/images/" + Model.CoverImage)))"
                         alt="@Model.Title"
                         class="img-thumbnail shadow-sm"
                         style="height: 150px; width: 120px; object-fit: cover; border-radius: 8px;" />
                </div>

                <dl class="row text-start mb-4">
                    <dt class="col-sm-3 fw-bold">Title</dt>
                    <dd class="col-sm-9">@Model.Title</dd>

                    <dt class="col-sm-3 fw-bold">Author</dt>
                    <dd class="col-sm-9">@Model.Author</dd>

                    <dt class="col-sm-3 fw-bold">Genre</dt>
                    <dd class="col-sm-9">@Model.Genre</dd>

                    <dt class="col-sm-3 fw-bold">Price</dt>
                    <dd class="col-sm-9 text-success">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-3 fw-bold">Stock</dt>
                    <dd class="col-sm-9">@Model.Stock</dd>
                </dl>

                <!-- Action Buttons -->
                <form asp-action="Delete" asp-route-id="@Model.BookID" method="post" class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4 py-2 fw-bold">
                        🗑 Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                        ⬅ Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        background: #fff;
        border-radius: 16px;
    }

    .btn-danger {
        font-size: 1rem;
        font-weight: bold;
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #b02a37;
        }

    .btn-secondary {
        font-size: 1rem;
        font-weight: bold;
    }
</style>
