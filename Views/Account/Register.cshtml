@model OnlineBookStore.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, sans-serif;
    }

    .register-container {
        display: flex;
        min-height: 100vh;
    }

    /* Left side image section */
    .register-left {
        flex: 1;
        background: url('/images/book-bg.jpg') no-repeat center center;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        text-align: center;
        position: relative;
    }

        .register-left::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: rgba(0, 0, 0, 0.5); /* Dark overlay for readability */
        }

        .register-left h1 {
            position: relative;
            z-index: 1;
            font-size: 3rem;
            font-weight: bold;
            line-height: 1.3;
            padding: 0 20px;
            text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.8);
        }

    /* Right side form section */
    .register-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px;
        background: #ffffff;
    }

    .register-card {
        width: 100%;
        max-width: 500px;
        border-radius: 12px;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: bold;
        padding: 15px;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-outline-secondary {
        border-radius: 30px;
    }

    .card-footer {
        background: #f8f9fa;
    }

        .card-footer a {
            font-weight: 600;
            color: #007bff;
            text-decoration: none;
        }

            .card-footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-container">
    <!-- Left Side with Book Image -->
    <div class="register-left">
        <h1>Welcome to <br> Online Book Store</h1>
    </div>

    <!-- Right Side with Form -->
    <div class="register-right">
        <div class="card shadow-lg border-0 register-card">
            <div class="card-header bg-primary text-white text-center">
                Create Your Account
            </div>
            <div class="card-body p-4">
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Role" class="form-label">Select Role</label>
                        <select asp-for="Role" class="form-select">
                            <option value="Customer" selected>Customer</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">Register</button>
                        <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <small>Already have an account? <a asp-action="Login">Login here</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
